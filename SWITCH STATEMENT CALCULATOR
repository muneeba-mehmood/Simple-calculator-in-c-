#include "stdafx.h"
#include <iostream>
using namespace std;


int _tmain(int argc, _TCHAR* argv[])
{
	
	char op;
	float num1, num2;
	cout<<"enter first number"<<endl;
	cin>>num1;
	cout<<endl;
    cout << "Enter operator either + or - or * or /: "<<endl;
    cin >> op;
	cout<<endl;
	cout << "Enter second number:"<<endl;
	cin	>> num2;
	cout<<endl;
    switch(op)
    {
        case '+':
            cout << "result="<<num1+num2<<endl;
            break;

		case'-':
			cout<<"result="<<num1-num2<<endl;
			break;

        case '*':
            cout <<"result="<< num1*num2<<endl;
            break;

        case '/':
            cout << "result="<<num1/num2<<endl;
            break;

		default:
            cout << "Error! operator is not correct";
            break;
    }
	
    return 0;

}


